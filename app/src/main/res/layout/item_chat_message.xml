<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="2dp"
    android:paddingHorizontal="4dp">

    <!-- User (outgoing) bubble: 右寄せ・ブルー -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardUserMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardElevation="0dp"
        app:shapeAppearance="@style/ShapeAppearance.Voiceapp.Bubble.Outgoing"
        app:cardBackgroundColor="@color/chat_outgoing_bg">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <ImageView
                android:id="@+id/ivUserImage"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:contentDescription="@string/chat_image_preview"
                android:scaleType="centerCrop"
                android:visibility="gone"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tvUserMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/chat_outgoing_text"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tvUserTimestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textSize="11sp"
                android:textColor="#B3FFFFFF" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- AI (incoming) bubble: 左寄せ・ライトグレー -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardAiMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardElevation="0dp"
        app:shapeAppearance="@style/ShapeAppearance.Voiceapp.Bubble.Incoming"
        app:cardBackgroundColor="@color/chat_incoming_bg">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <ImageView
                android:id="@+id/ivAiImage"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:contentDescription="@string/chat_image_preview"
                android:scaleType="centerCrop"
                android:visibility="gone"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tvAiMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/chat_incoming_text"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tvAiTimestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textSize="11sp"
                android:textColor="@color/ios_secondary_label" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>

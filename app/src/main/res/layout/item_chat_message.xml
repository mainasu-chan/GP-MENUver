<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="6dp"
    android:paddingHorizontal="12dp">

    <!-- User (outgoing) bubble: 右寄せ・グリーン -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardUserMessage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginEnd="8dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardElevation="2dp"
        app:shapeAppearance="@style/ShapeAppearance.Voiceapp.Bubble.Outgoing"
        app:cardBackgroundColor="@color/chat_outgoing_bg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp">

            <ImageView
                android:id="@+id/ivUserImage"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:contentDescription="@string/chat_image_preview"
                android:scaleType="centerCrop"
                android:visibility="gone"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tvUserMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/chat_outgoing_text"
                android:textSize="15sp"
                android:lineSpacingExtra="4dp"
                android:fontFamily="sans-serif"
                android:letterSpacing="0.01" />

            <TextView
                android:id="@+id/tvUserTimestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:textSize="12sp"
                android:alpha="0.75"
                android:fontFamily="sans-serif"
                android:textColor="@color/chat_outgoing_text" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- AI (incoming) bubble: 左寄せ・ライトグレー -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardAiMessage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="64dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardElevation="2dp"
        app:shapeAppearance="@style/ShapeAppearance.Voiceapp.Bubble.Incoming"
        app:cardBackgroundColor="@color/chat_incoming_bg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp">

            <ImageView
                android:id="@+id/ivAiImage"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:contentDescription="@string/chat_image_preview"
                android:scaleType="centerCrop"
                android:visibility="gone"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tvAiMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/chat_incoming_text"
                android:textSize="15sp"
                android:lineSpacingExtra="4dp"
                android:fontFamily="sans-serif"
                android:letterSpacing="0.01" />

            <TextView
                android:id="@+id/tvAiTimestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:textSize="12sp"
                android:fontFamily="sans-serif"
                android:alpha="0.65"
                android:textColor="@color/ios_secondary_label" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>

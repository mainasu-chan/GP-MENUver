<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="@color/ios_bg_secondary">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="設定"
            android:textSize="28sp"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/ios_label"
            android:layout_marginBottom="24dp" />

        <!-- ユーザー設定セクション -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="2dp"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="@color/ios_bg_primary">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ユーザー設定"
                    android:textSize="20sp"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/ios_label"
                    android:layout_marginBottom="20dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="あなたの名前"
                    app:boxBackgroundColor="@color/ios_bg_secondary"
                    app:boxCornerRadiusTopStart="16dp"
                    app:boxCornerRadiusTopEnd="16dp"
                    app:boxCornerRadiusBottomStart="16dp"
                    app:boxCornerRadiusBottomEnd="16dp"
                    app:boxStrokeWidth="0dp"
                    app:hintTextColor="@color/ios_secondary_label"
                    android:layout_marginBottom="16dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etUserName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif"
                        android:textColor="@color/ios_label"
                        android:maxLines="1" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="AIアシスタントの名前"
                    android:id="@+id/AgentName"
                    app:boxBackgroundColor="@color/ios_bg_secondary"
                    app:boxCornerRadiusTopStart="16dp"
                    app:boxCornerRadiusTopEnd="16dp"
                    app:boxCornerRadiusBottomStart="16dp"
                    app:boxCornerRadiusBottomEnd="16dp"
                    app:boxStrokeWidth="0dp"
                    app:hintTextColor="@color/ios_secondary_label"
                    android:layout_marginBottom="16dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etAgentName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif"
                        android:textColor="@color/ios_label"
                        android:maxLines="1" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- ユーザーアイコン設定 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:id="@+id/ivUserIcon"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@mipmap/ic_launcher_round"
                        android:contentDescription="ユーザーアイコン"
                        android:scaleType="centerCrop"
                        android:background="@drawable/user_icon_background"
                        android:padding="0dp"
                        android:layout_marginEnd="20dp"
                        android:clipToOutline="true" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnPickUserIcon"
                        style="@style/Widget.Voiceapp.PrimaryButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="アイコン画像を選択"
                        android:textSize="15sp" />

                </LinearLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSaveUserSettings"
                    style="@style/Widget.Voiceapp.PrimaryButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="保存"
                    android:textSize="15sp"
                    android:layout_gravity="end" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- 性格設定セクション -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="2dp"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="@color/ios_bg_primary">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="性格設定"
                    android:textSize="20sp"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/ios_label"
                    android:layout_marginBottom="16dp" />

                <RadioGroup
                    android:id="@+id/rgPersonality"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/radioPlayful"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif"
                        android:textColor="@color/ios_label"
                        android:text="おちゃめ" />

                    <RadioButton
                        android:id="@+id/radioKind"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif"
                        android:textColor="@color/ios_label"
                        android:text="優しい" />

                    <RadioButton
                        android:id="@+id/radioObjective"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif"
                        android:textColor="@color/ios_label"
                        android:text="客観的" />
                </RadioGroup>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- API設定セクション -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="2dp"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="@color/ios_bg_primary">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/debug_title"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/ios_label"
                    android:textSize="20sp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_debug_description"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif"
                    android:textColor="@color/ios_secondary_label"
                    android:layout_marginBottom="16dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnOpenDebug"
                    style="@style/Widget.Voiceapp.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_open_debug" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- アプリ情報セクション -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="2dp"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="@color/ios_bg_primary">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="アプリ情報"
                    android:textSize="20sp"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/ios_label"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="バージョン: 1.0"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="OpenAI互換API対応チャットアプリ"
                    android:textSize="12sp"
                    android:textColor="@android:color/darker_gray" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>


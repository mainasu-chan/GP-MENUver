<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="32dp">

    <ImageView
        android:id="@+id/ivTutorialImage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginBottom="32dp"
        android:contentDescription="@string/tutorial_page1_title"
        android:src="@android:drawable/ic_dialog_info" />

    <TextView
        android:id="@+id/tvTutorialTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tutorial_page1_title"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/ios_label"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/tvTutorialDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tutorial_page1_description"
        android:textSize="16sp"
        android:textColor="@color/ios_secondary_label"
        android:gravity="center"
        android:lineSpacingExtra="4dp" />

</LinearLayout>

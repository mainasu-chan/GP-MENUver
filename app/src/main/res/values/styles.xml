<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Modern Card Style -->
    <style name="Widget.Voiceapp.Card" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">20dp</item>
        <item name="cardElevation">2dp</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <!-- Button Styles -->
    <style name="Widget.Voiceapp.PrimaryButton" parent="Widget.Material3.Button">
        <item name="android:minHeight">52dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="Widget.Voiceapp.OutlinedButton" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:minHeight">52dp</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Chat Button Base -->
    <style name="Widget.Voiceapp.ChatButton.IconBase" parent="Widget.Material3.Button.Icon">
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="iconPadding">0dp</item>
        <item name="iconSize">24dp</item>
        <item name="android:minWidth">56dp</item>
        <item name="android:minHeight">56dp</item>
        <item name="cornerRadius">28dp</item>
        <item name="elevation">2dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <!-- Clear Button -->
    <style name="Widget.Voiceapp.ChatButton.Clear" parent="Widget.Voiceapp.ChatButton.IconBase">
        <item name="backgroundTint">@color/chat_mic_container</item>
        <item name="strokeColor">@color/chat_clear_stroke</item>
        <item name="strokeWidth">0dp</item>
        <item name="iconTint">@color/chat_clear_icon</item>
        <item name="rippleColor">@color/ios_ripple</item>
    </style>

    <!-- Mic Button -->
    <style name="Widget.Voiceapp.ChatButton.Mic" parent="Widget.Voiceapp.ChatButton.IconBase">
        <item name="backgroundTint">@color/chat_mic_container</item>
        <item name="iconTint">@color/chat_mic_icon</item>
        <item name="rippleColor">@color/ios_ripple</item>
    </style>

    <!-- Attach Button -->
    <style name="Widget.Voiceapp.ChatButton.Attach" parent="Widget.Voiceapp.ChatButton.IconBase">
        <item name="backgroundTint">@color/chat_attach_bg</item>
        <item name="iconTint">@color/chat_attach_icon</item>
        <item name="rippleColor">@color/chat_ripple</item>
    </style>

    <!-- Send Button -->
    <style name="Widget.Voiceapp.ChatButton.Send" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/chat_send_bg</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="iconTint">@android:color/white</item>
        <item name="rippleColor">@color/chat_ripple</item>
        <item name="android:minHeight">56dp</item>
        <item name="iconSize">22dp</item>
        <item name="iconPadding">6dp</item>
        <item name="cornerRadius">28dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="elevation">2dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <!-- Chat Bubble Shapes -->
    <style name="ShapeAppearance.Voiceapp.Bubble.Base" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
    </style>
    
    <style name="ShapeAppearance.Voiceapp.Bubble.Outgoing" parent="ShapeAppearance.Voiceapp.Bubble.Base">
        <item name="cornerSizeBottomRight">6dp</item>
    </style>
    
    <style name="ShapeAppearance.Voiceapp.Bubble.Incoming" parent="ShapeAppearance.Voiceapp.Bubble.Base">
        <item name="cornerSizeBottomLeft">6dp</item>
    </style>
</resources>

